{
    "compilerOptions": {
      "checkJs": true,
      "skipLibCheck": true,
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react",
      "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "noLib": false
    },
    "include": ["./src/**/*"]
  }
  
  